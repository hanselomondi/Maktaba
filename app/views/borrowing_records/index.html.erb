<h1>All Borrowing Records</h1>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Borrower</th>
      <th>Book Title</th>
      <th>Date Borrowed</th>
      <th>Date Returned</th>
    </tr>
  </thead>
  <tbody>
    <% @borrowing_records.each do |record| %>
      <tr>
        <td><%= record.borrower.name %></td>
        <td><%= record.book_copy.book.title %></td>
        <td><%= record.date_borrowed %></td>
        <td><%= record.date_returned || "Not returned" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
