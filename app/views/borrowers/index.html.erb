<span class="d-flex justify-content-between">
    <h1>Borrowers</h1>
    <%= link_to 'Add New Borrower', new_borrower_path, class: "btn btn-secondary align-self-center" %>
</span>
<br/>

<% if notice %>
    <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if @borrowers.any? %>
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            <% @borrowers.each do |borrower| %>
                <tr>
                    <td>
                        <%= link_to borrower.name, borrower, class: "text-decoration-none text-hover-underline" %>
                    </td>
                    <td><%= borrower.email %></td>
                    <td><%= borrower.phone %></td>
                    <td>
                        <%= link_to 'Edit', edit_borrower_path(borrower), class: "btn btn-outline-secondary btn-sm" %>
                        <%= link_to 'Delete', borrower_path(borrower), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% else %>
    <p>No Borrower Records</p>
<% end %>