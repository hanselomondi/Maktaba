<span class="d-flex justify-content-between">
    <h1>Books</h1>
    <%= link_to 'Add New Book', new_book_path, class: "btn btn-secondary align-self-center" %>
</span>
<br/>

<% if notice %>
    <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if @books.any? %>
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
                <tr>
                    <td>
                        <%= link_to book.title, book_path(book), class: "text-decoration-none text-hover-underline"%>
                    </td>
                    <td><%= book.author %></td>
                    <td><%= book.isbn %></td>
                    <td>
                        <%= link_to 'Edit', edit_book_path(book), class: "btn btn-outline-secondary btn-sm" %>
                        <%= link_to 'View Copies', book_book_copies_path(book), class: "btn btn-primary btn-sm" %>
                        <%= link_to 'Add Copy', new_book_book_copy_path(book), class: "btn btn-success btn-sm" %>
                        <%= link_to 'Delete', book_path(book), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% else %>
    <p>No Book Records</p>
<% end %>